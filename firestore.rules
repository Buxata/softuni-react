rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access to all documents in the projects collection
    match /projects/{project} {
      allow read: if true;
    }

    // Allow write access to the projects collection only for allowed users
    match /projects/{project} {
      allow write: if request.auth != null &&
                  get(/databases/$(database)/documents/content_managers/$(request.auth.uid)) != null;
    }

    // Allow read access to the content_managers collection
    match /content_managers/{user} {
      allow read: if request.auth != null && request.auth.uid == user;
    }
  }
}
